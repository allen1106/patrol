/* pages/group/group.wxss */
page {
  background-color: #F2F2FC;
}

.page-wrapper {
  width: 95%;
  margin: 0 auto;
}

.page-wrapper .input-wrapper {
  width: 100%;
  height: 80rpx;
  margin: 20rpx 0;
  border: 1rpx solid #486AF0;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.page-wrapper .input-wrapper input {
  width: 70%;
  margin-left: 20rpx;
  align-items: center;
}

.page-wrapper .input-wrapper .btn-add {
  height: 100%;
  width: 30%;
  background-color: #486AF0;
  color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.page-wrapper .input-wrapper .btn-add image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}

.item-list {
  background-color: #fff;
  width: calc(100% - 60rpx);
  padding: 30rpx;
}

.item-list .item-wrapper {
  background-color: #F2F2FC;
  margin-top: 10rpx;
}

.btn-cancel image {
  width: 60rpx;
  height: 60rpx;
}

.btn-download image {
  width: 45rpx;
  height: 45rpx;
}

.group-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  padding: 20rpx;
  border-radius: 10rpx;
}

.group-item checkbox {
  margin-right: 20rpx;
}

.group-item .content-wrapper {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

checkbox .wx-checkbox-input{
  border-radius: 50%;/* 圆角 */
  width: 34rpx; /* 背景的宽 */
  height: 34rpx; /* 背景的高 */
}
/* 选中后的 背景样式*/
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
  border: 2rpx solid #486AF0;
  background: #486AF0;
}
/* 选中后的 对勾样式 */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  border-radius: 50%;/* 圆角 */
  width: 30rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
  height: 30rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 30rpx;
  text-align: center;
  font-size:30rpx; /* 对勾大小 30rpx */
  color:#fff; /* 对勾颜色 白色 */
  background: transparent;
  transform:translate(-50%, -50%) scale(1);
  -webkit-transform:translate(-50%, -50%) scale(1);
}

.btn-wrapper {
  color: #707070;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  border-top: 2rpx solid #EAE7E8;
  display: flex;
  flex-direction: row;
  background-color: white;
}

.btn-wrapper view {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  border-right: 2rpx solid #EAE7E8;
}

.btn-wrapper view:nth-child(3) {
  border-right: none;
}