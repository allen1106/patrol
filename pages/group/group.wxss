/* pages/group/group.wxss */
page {
  background-color: #F6F6F6;
}

.page-wrapper {
  width: 95%;
  margin: 0 auto;
}

.page-wrapper .input-wrapper {
  width: 100%;
  height: 80rpx;
  margin: 20rpx 0;
  border: 1rpx solid #486AF0;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.page-wrapper .input-wrapper input {
  width: 70%;
  margin-left: 20rpx;
  align-items: center;
}

.page-wrapper .input-wrapper .btn-wrapper {
  height: 100%;
  width: 30%;
  background-color: #486AF0;
  color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.page-wrapper .input-wrapper .btn-wrapper image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}