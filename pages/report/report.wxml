<form bindsubmit="bindSubmitForm" bindreset="bindBackToIndex">
<view class="page-wrapper">
  <view class="header" wx:if="{{id != 0}}">
    <view class="title">郑州绿地花语城四期洋房样板间</view>
    <view class="opt-wrapper">
      <image bindtap="download" src="/imgs/report/2.png"></image>
      <!-- <image src="/imgs/regist_name.png"></image> -->
    </view>
  </view>
  <view class="nav" wx:if="{{id == 0}}">
    <view class="project">
      <picker bindchange="bindProjectChange" value="{{proIdx}}" range="{{projectList}}" range-key="name">
        <view class="picker">
          当前项目：{{projectList[proIdx].name}}
        </view>
      </picker>
    </view>
    <view class="system">
      <picker bindchange="bindSystemChange" value="{{sysIdx}}" range="{{systemList}}" range-key="name">
        <view class="picker">
          当前系统：{{systemList[sysIdx].name}}
        </view>
      </picker>
    </view>
  </view>
  <view class="summary" wx:if="{{id==0}}">
    <view>巡检部门：{{reportInfo.department}}</view>
    <view>巡检人：{{reportInfo.username}}</view>
    <view>巡检时间：{{reportInfo.time}}</view>
  </view>
  <view class="summary" wx:if="{{id!=0}}">
    <view>任务编号：{{reportInfo.bgbh}}</view>
    <view>发起时间：{{reportInfo.task_time}}</view>
  </view>
  <view class="description">
    <view class="item-wrapper">
      <view class="label">问题描述</view>
      <view class="input"><input value="{{reportInfo.question}}" name="question"></input></view>
    </view>
    <view class="item-wrapper">
      <view class="label">原因</view>
      <view class="input"><input value="{{reportInfo.reason}}" name="reason"></input></view>
    </view>
    <view class="item-wrapper">
      <view class="label">解决办法</view>
      <view class="input"><input value="{{reportInfo.solve}}" name="solve"></input></view>
    </view>
    <view class="item-wrapper">
      <view class="label">区域</view>
      <view class="input"><input value="{{reportInfo.region}}" name="region"></input></view>
    </view>
    <view class="item-wrapper">
      <view class="label">部位</view>
      <view class="input"><input value="{{reportInfo.position}}" name="position"></input></view>
    </view>
    <view class="item-wrapper">
      <view class="label">设计要求</view>
    </view>
    <view class="item-wrapper">
      <view class="label small-label">现场图片</view>
      <view class="image-wrapper">
        <view class="img-upload-container">
          <view class="img-preview-container" wx:for="{{imageList}}" wx:key="index">
            <image class="img-preview" src="{{imageList[index]}}" data-src="{{imageList[index]}}" data-index="0" bindtap="previewImage"></image>
            <image class="img-close" src="/imgs/close.png" bindtap="delImg" data-src="{{imageList[index]}}" data-index="0" wx:if="{{id==0}}"></image>
          </view>
          <view class="img-preview-container" bindtap="chooseImage" wx:if="{{imageList.length < count}}" data-index="0" wx:if="{{id==0}}">
            <image class="img-preview" src="/imgs/report/1.png"></image>
          </view>
        </view>
      </view>
    </view>
    <view class="item-wrapper">
      <view class="label small-label">参照做法和要求</view>
      <view class="image-wrapper">
        <view class="img-upload-container" data-index="1">
          <view class="img-preview-container" wx:for="{{image1List}}" wx:key="index">
            <image class="img-preview" src="{{image1List[index]}}" data-src="{{image1List[index]}}" data-index="1" bindtap="previewImage"></image>
            <image class="img-close" src="/imgs/close.png" bindtap="delImg" data-src="{{imageList[index]}}" data-index="1" wx:if="{{id==0}}"></image>
          </view>
          <view class="img-preview-container" data-index="1" bindtap="chooseImage" wx:if="{{image1List.length < count}}" wx:if="{{id==0}}">
            <image class="img-preview" src="/imgs/report/1.png"></image>
          </view>
        </view>
      </view>
    </view>
    <view class="item-wrapper">
      <view class="label">备注</view>
      <view class="input"><input value="{{reportInfo.remark}}" name="remark"></input></view>
    </view>
  </view>
  <view class="assign">
    <view class="title">推送给：</view>
    <scroll-view class="scroll-view-con" scroll-y>
      <view class="member-container" wx:for="{{memberList}}" wx:for-index="index" wx:for-item="value">
        <view class="title-wrapper">{{departmentList[index]}}:</view>
        <view class="check-wrapper">
          <view class="select-all">
            <checkbox bindtap="bindSelectAll" data-sidx="{{index}}">全选</checkbox>
          </view>
          <view class="select-list">
            <checkbox-group bindchange="checkboxChange">
              <view class="checkbox" wx:for="{{value}}" wx:key="index" wx:for-index="midx">
              <checkbox bindtap="bindSelect" value="{{value[midx].id}}" checked="{{value[midx].checked}}" data-sidx="{{index}}" data-midx="{{midx}}">{{value[midx].realname}}</checkbox>
              </view>
            </checkbox-group>
          </view>
        </view>
      </view>
    </scroll-view>
  </view>
  <view class="foot">
    <view class="comment-wrapper">
      <text wx:for="{{commonList}}"></text>
    </view>
    <view class="btn-wrapper" wx:if="{{isFb!=1}}">
      <button form-type="submit" data-id="1">提交</button>
      <button form-type="reset">取消</button>
      <button form-type="submit" data-id="0">保存</button>
    </view>
  </view>
</view>
</form>