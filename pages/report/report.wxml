<form bindsubmit="bindSubmitForm" bindreset="bindBackToIndex">
<view class="page-wrapper">
  <view class="header">
    <view class="title">郑州绿地花语城四期洋房样板间</view>
    <view class="opt-wrapper">
      <image bindtap="download" src="/imgs/report/2.png"></image>
      <!-- <image src="/imgs/regist_name.png"></image> -->
    </view>
  </view>
  <view class="summary">
    <view>巡检部门：{{reportInfo.department}}</view>
    <view>巡检人：{{reportInfo.username}}</view>
    <view>巡检时间：{{reportInfo.time}}</view>
  </view>
  <view class="description">
    <view class="tr width28 bg-blue">
      <view class="td">问题描述</view>
      <view class="td"><input value="{{reportInfo.question}}"></input></view>
    </view>
        <view class="tr width28 bg-blue">
      <view class="td">原因</view>
      <view class="td"><input value="{{reportInfo.reason}}"></input></view>
    </view>
        <view class="tr width28 bg-blue">
      <view class="td">解决办法</view>
      <view class="td"><input value="{{reportInfo.solve}}"></input></view>
    </view>
    <view class="tr width55">
      <view class="td co-black">区域</view>
      <view class="td co-orange"><input value="{{reportInfo.region}}"></input></view>
      <view class="td co-black">部位</view>
      <view class="td co-orange"><input value="{{reportInfo.position}}"></input></view>
      <view class="td co-black">设计要求</view>
    </view>
    <view class="tr width55">
      <view class="td">现场图片</view>
      <view class="td">参照做法和要求</view>
    </view>
    <view class="tr width55 bg-gray high-tr">
      <view class="td">
        <view class="img-upload-container">
          <view class="img-preview-container" wx:for="{{imageList}}" wx:key="index">
            <image class="img-preview" src="{{imageList[index]}}" data-src="{{imageList[index]}}" data-index="0" bindtap="previewImage"></image>
            <image class="img-close" src="/imgs/close.png" bindtap="delImg" data-src="{{imageList[index]}}" data-index="0"></image>
          </view>
          <view class="img-preview-container" bindtap="chooseImage" wx:if="{{imageList.length < count}}" data-index="0">
            <image class="img-preview" src="/imgs/report/1.png"></image>
          </view>
        </view>
      </view>
      <view class="gap-line"></view>
      <view class="td">
        <view class="img-upload-container" data-index="1">
          <view class="img-preview-container" wx:for="{{image1List}}" wx:key="index">
            <image class="img-preview" src="{{image1List[index]}}" data-src="{{image1List[index]}}" data-index="1" bindtap="previewImage"></image>
            <image class="img-close" src="/imgs/close.png" bindtap="delImg" data-src="{{imageList[index]}}" data-index="1"></image>
          </view>
          <view class="img-preview-container" data-index="1" bindtap="chooseImage" wx:if="{{image1List.length < count}}">
            <image class="img-preview" src="/imgs/report/1.png"></image>
          </view>
        </view>
      </view>
    </view>
    <view class="tr width28 bg-blue">
      <view class="td">备注</view>
      <view class="td co-pink"><input value="{{reportInfo.remark}}"></input></view>
    </view>
  </view>
  <view class="assign">
    <view class="title">推送给：</view>
    <scroll-view class="scroll-view-con" scroll-y>
    <view class="member-container" wx:for="{{memberList}}" wx:for-index="index" wx:for-item="value">
      <view class="title-wrapper">{{departmentList[index]}}:</view>
      <view class="check-wrapper">
        <view class="select-all">
          <checkbox bindtap="bindSelectAll" data-sidx="{{index}}">全选</checkbox>
        </view>
        <view class="select-list">
          <view class="checkbox" wx:for="{{value}}" wx:key="item">
          <checkbox value="{{item.id}}" checked="{{item.checked}}">{{item.realname}}</checkbox>
          </view>
        </view>
      </view>
    </view>
    </scroll-view>
  </view>
  <view class="foot">
    <view class="comment-wrapper">
      <text wx:for="{{commonList}}"></text>
    </view>
    <view class="btn-wrapper">
      <button form-type="submit" data-id="1">提交</button>
      <button form-type="reset">取消</button>
      <button form-type="submit" data-id="0">保存</button>
    </view>
  </view>
</view>
</form>