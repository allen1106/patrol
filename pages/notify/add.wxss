/* pages/notify/add.wxss */
page {
  background-color: #F2F2FC;
}

.page-wrapper {
  width: 95%;
  margin: 20rpx auto;
  padding-bottom: 100rpx;
  font-size: 20rpx;
}

.description {
  margin-top: 20rpx;
  width: 100%;
  color: #9999A6;
}

.item-wrapper {
  margin-top: 20rpx;
}
.item-wrapper .label {
  font-size: 32rpx;
}
.item-wrapper .input {
  margin-top: 10rpx;
  border: 2rpx solid #DCDCDC;
  border-radius: 10rpx;
  min-height: 80rpx;
  width: calc(100% - 44rpx);
  padding: 10rpx 20rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}
.item-wrapper .input textarea {
  display: inline-block;
  height: 80rpx;
  width: calc(100% - 100rpx);
}

.item-wrapper .input textarea.high-text {
  height: 160rpx;
}

.item-wrapper .input input {
  width: 100%;
}
.item-wrapper .input text {
  display: inline-block;
  word-wrap: break-word; 
  word-break: normal;
  width: 100%;
}
.item-wrapper .input .btn-speak {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  border-radius: 37.5rpx;
  border: 5rpx solid black;
}

.item-wrapper .input .btn-speak image {
  width: 50rpx;
  height: 50rpx;
}

.item-wrapper .image-wrapper {
  background-color: #fff;
  border: 2rpx solid #DCDCDC;
  border-radius: 20rpx;
}


.img-upload-container {
  width: 100%;
  vertical-align: top;
  overflow: hidden;
}

.img-upload-container view {
  display: inline-block;
  vertical-align: top;
  width: 120rpx;
  height: 120rpx;
}

.img-upload-container .img-preview {
  width: 100%;
  height: 100%;
}

.img-upload-container .img-preview-container {
  position: relative;
  padding: 20rpx;
  float: left;
}

.img-upload-container .img-preview-container .img-close {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  right: 15rpx;
  top: 15rpx;
}

.content-container .img-upload {
  display: inline-block;
}

.assign {
  margin-top: 20rpx;
  width: 100%;
  font-size: 24rpx;
}

.assign .label {
  color: #9999A6;
  font-size: 32rpx;
}

.assign .title view {
  width: calc(50% - 5rpx);
  height: 80rpx;
  background-color: #B9B9B9;
  display: flex;
  align-items: center;
  justify-content: center;
}
.assign .title view:nth-child(1) {
  border-top-left-radius: 10rpx;
}
.assign .title view:nth-child(2) {
  border-top-right-radius: 10rpx;
  margin-left: 10rpx;
}
.assign .title view.active {
  background-color: #486AF0;
  color: #fff;
}

.assign .title view image {
  margin-right: 10rpx;
  height: 40rpx;
  width: 40rpx;
}

.scroll-view-common {
  width: 100%;
}

.input-wrapper {
  margin-top: 20rpx;
  width: calc(100% - 44rpx);
  padding: 0 20rpx;
  height: 80rpx;
  border: 2rpx solid #DCDCDC;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.input-wrapper input {
  height: 40rpx;
  width: 100%;
}

.input-wrapper .image {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.input-wrapper image {
  width: 40rpx;
  height: 40rpx;
}

.name-pannel {
  height: 150rpx;
  width: calc(100% - 4rpx);
  border: 2rpx solid #DCDCDC;
  background-color: #fff;
}

.name-pannel .member-item {
  height: 50rpx;
  font-size: 28rpx;
  display: inline-flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  padding: 5rpx 20rpx;
  background-color: #F2F2FC;
  border-radius: 50rpx;
  margin: 10rpx;
}

.name-pannel .member-item image {
  margin-left: 20rpx;
  width: 30rpx;
  height: 30rpx;
}


.depart-wrapper {
  width: calc(100% - 44rpx);
  margin-top: 20rpx;
  padding: 20rpx;
  padding-top: 0;
  border: 2rpx solid #DCDCDC;
  background-color: #fff;
}

.depart-wrapper .header {
  width: 100%;
  height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.depart-wrapper .header view {
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.depart-wrapper .header image {
  width: 30rpx;
  height: 30rpx;
}
.depart-wrapper .header text {
  font-size: 24rpx;
  color: #A9A9A9;
}

.depart-pannel {
  margin-top: 20rpx;
  height: 400rpx;
}

.region-item {
  display: inline-flex;
  width: calc(48% - 40rpx);
  padding: 10rpx 20rpx;
  height: 30rpx;
  margin: 5rpx auto;
  background-color: #F2F2FC;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.region-item:nth-child(2n + 2) {
  margin-left: 4%;
}

.region-item image {
  width: 30rpx;
  height: 30rpx;
}

.btn-wrapper {
  color: #707070;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  border-top: 2rpx solid #EAE7E8;
  display: flex;
  flex-direction: row;
  background-color: white;
}

.btn-wrapper view {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  border-right: 2rpx solid #EAE7E8;
}

.btn-wrapper view:nth-child(3) {
  border-right: none;
}

.btn-wrapper view image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}

.mask{
  width:100%;
  height:100%;
  position:fixed;
  background-color: rgba(153,153,153,0.6);
  z-index:9999;
  top:0;
  left:0;
}
.member-pannel {
  width: 90%;
  height: 500rpx;
  margin: 50% auto;
  background-color: #fff;
  font-size: 32rpx;
  border-radius: 10rpx;
}
.member-pannel .title {
  position: relative;
  width: 100%;
  height: 60rpx;
  background-color: #486AF0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.member-pannel .title image {
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.search-pannel {
  width: 90%;
  height: 80rpx;
  margin: 20rpx auto;
  border: 2rpx solid #DCDCDC;
  border-radius: 10rpx;
}
.input-pannel {
  height: 100%;
  width: calc(100% - 40rpx);
  margin: 0 auto;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.input-pannel image {
  width: 50rpx;
  height: 50rpx;
}

.choose-pannel {
  width: 90%;
  height: 300rpx;
  margin: 0 auto;
}

.choose-pannel .checkbox {
  width: 33.3%;
  display: inline-block;
  height: 50rpx;
  margin-top: 30rpx;
}