/* pages/findpass/findpass.wxss */
page {
  font-size: 24rpx;
  background-color: #fff;
}

button:not([size='mini']) {
  padding: 0;
  background-color: #4876FF;
  color: #fff;
}

.container {
  padding: 0;
  margin: 0;
  width: 100%;
}

.form-wrapper {
  margin: 50rpx auto;
  width: 90%;
  height: 50vh;
}

.input-wrapper {
  display: flex;
  margin-top: 50rpx;
  width: 100%;
  height: 80rpx;
  border: 5rpx solid #EAE7E8;
  border-radius: 20rpx;
  align-items: center;
}

.input-wrapper text {
  margin-left: 20rpx;
}

.input-wrapper input {
  margin-left: 20rpx;
}

.verify-code {
  margin-top: 50rpx;
  display: flex;
  align-items: center;
  width: 100%;
}

.verify-code .input-wrapper {
  width: 70%;
  margin: 0;
}

.verify-code button:not([size='mini']) {
  margin-left: 5%;
  width: 25%;
  height: 80rpx;
  line-height: 80rpx;
}

.btn-full:not([size='mini']) {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 20rpx;
  box-shadow: 0 5rpx 10rpx 2rpx #EAE7E8;
}