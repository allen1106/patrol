<!--index.wxml-->
<image src="/imgs/index/bg.png" class="page-wrapper">
  <view class="header">众智学府品控巡检系统</view>
  <view class="date-wrapper">
    <text>{{date}}</text>
    <text>{{workDay}}</text>
  </view>
</image>

<view class="container">
  <view class="notification">
    <image src="/imgs/index/7.png">
      <view>{{mailInfo.number}}</view>
    </image>
    <text wx:if="{{showLogin}}">请先到个人中心进行登录</text>
    <view class="text"  wx:if="{{!showLogin}}">
      <text bindtap="navigateToEvaluate" data-isfb="0">您有{{mailInfo.number}}条任务待解决</text>
      <text bindtap="navigateToTaskList" data-isfb="3">您收到{{mailInfo.number1}}条任务回复</text>
      <text bindtap="navigateToEvaluate" data-isfb="1">您有{{mailInfo.number2}}任务解决通过</text>
    </view>
  </view>
  <view class="menu-list">
    <view class="menu-line">
      <view class="menu-item bg-2" bindtap="navigateToEvaluate" data-isfb="0">
        <text class="text-wrapper">待处理报告</text>
      </view>
      <view class="menu-item bg-6" bindtap="navigateToEvaluate" data-isfb="1">
        <text class="text-wrapper">已处理报告</text>
      </view>
    </view>
    <view class="menu-line">
      <view class="menu-item bg-4" bindtap="navigateToReport" data-id="0">
        <text class="text-wrapper">发布巡检报告</text>
      </view>
      <view class="menu-item bg-5" bindtap="navigateToTaskList" data-isfb="0">
        <text class="text-wrapper">草稿箱</text>
      </view>
    </view>
    <view class="menu-line">
      <view class="menu-item bg-2" bindtap="navigateToTaskList" data-isfb="3">
        <text class="text-wrapper">已发布巡检报告</text>
      </view>
      <view class="menu-item bg-6" bindtap="navigateToStatistics" data-tab="1">
        <text class="text-wrapper">表格统计</text>
      </view>
    </view>
  </view>
  <view class="btn-wrapper">
    <button class="btn-logout" bindtap="navigateToPersonal">个人中心</button>
    <button class="btn-logout" wx:if="{{!showLogin}}" bindtap="logout">退出登录</button>
  </view>
</view>