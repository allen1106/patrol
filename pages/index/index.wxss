/**index.wxss**/
page {
  font-size: 20rpx;
}

.page-wrapper {
  position: relative;
  width: 100%;
  height: 30vh;
}

.header {
  position: absolute;
  top: 20rpx;
  left: 5%;
  width: 90%;
  margin: 0 auto;
  text-align: center;
  font-size: 40rpx;
  color: #fff;
}

.date-wrapper {
  position: absolute;
  bottom: 150rpx;
  left: 5%;
  display: flex;
  flex-direction: row;
  width: 90%;
  margin-top: 20rpx;
  color: #fff;
  font-size: 24rpx;
}

.date-wrapper text {
  width: 50%;
}


.container {
  /* margin-top: 200rpx; */
  position: relative;
  padding: 0;
  margin: 0;
  width: 100%;
  height: calc(70vh - 20rpx);
  background-color: #fff;
  justify-content: initial;
}

.notification {
  position: absolute;
  top: -130rpx;
  left: 5%;
  display: flex;
  height: 150rpx;
  width: 90%;
  border-radius: 20rpx;
  background-color: #fff;
  align-items: center;
  box-shadow: 0 5rpx 10rpx 2rpx #EAE7E8;
}

.notification image {
  position: relative;
  margin-left: 40rpx;
  margin-right: 40rpx;
  height: 127rpx;
  width: 110rpx;
}

.notification image view {
  position: absolute;
  top: 10rpx;
  right: 0;
  height: 30rpx;
  width: 30rpx;
  border-radius: 30rpx;
  background-color: red;
  text-align: center;
  line-height: 30rpx;
  font-size: 20rpx;
  font-weight: bold;
  color: #fff;
}


.notification text {
  height: 200rpx;
  line-height: 200rpx;
  font-size: 24rpx;
}

.menu-list {
  width: 90%;
  margin: 0 auto;
  margin-top: 40rpx;
}

.menu-item {
  position: relative;
  display: inline-flex;
  margin-top: 40rpx;
  width: calc(50% - 20rpx);
  height: 150rpx;
  border-radius: 20rpx;
}

.menu-item:nth-child(2n+2) {
  margin-left: 40rpx;
}

.menu-item .text-wrapper {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  color: #fff;
  font-size: 28rpx;
}

.btn-wrapper {
  width: 90%;
  margin-top: 40rpx;
  height: 100rpx;
  display: inline-flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.btn-logout:not([size='mini']) {
  width: 40%;
  height: 80rpx;
  line-height: 50rpx;
  background-color: #4876FF;
  color: #fff;
  border-radius: 80rpx;
  font-size: 40rpx;
}