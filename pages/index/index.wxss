/**index.wxss**/
page {
  font-size: 20rpx;
  background-color: #B8CEFD;
}

.co-red {
  color: red;
}


.page-top {
  position: relative;
  width: 100%;
  height: 30vh;
}

.page-bottom {
  width: 100%;
  height: 20vh;
}

.header {
  position: absolute;
  top: 100rpx;
  left: 5%;
  width: 90%;
  margin: 0 auto;
  text-align: center;
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
}


.container {
  position: relative;
  padding: 0;
  margin: 0;
  width: 100%;
  height: 50vh;
  justify-content: initial;
}

.notification {
  position: absolute;
  top: -160rpx;
  left: 5%;
  height: 240rpx;
  width: 90%;
  border-radius: 20rpx;
}

.notification .panel-wrapper {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.notification .date-wrapper {
  width: 40%;
  height: 100%;
  color: #5E79F2;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.notification .date-wrapper .work-day {
  font-size: 32rpx;
  font-weight: bold;
  margin: 10rpx;
}

.notification .date-wrapper .date {
  font-size: 24rpx;
}

.notification .text {
  width: 60%;
  margin-left: 40rpx;
  height: 80%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
}

.notification .text.center-text {
  justify-content: center;
}


.notification .text .text-wrapper {
  padding: 10rpx 0;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.notification .text .text-wrapper image {
  width: 30rpx;
  height: 30rpx;
  margin: 0 10rpx;
}

.menu-list {
  width: 90%;
  margin: 0 auto;
  margin-top: 50rpx;
}

.menu-line {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.menu-item {
  position: relative;
  margin-top: 20rpx;
  height: 150rpx;
  border-radius: 20rpx;
}

.menu-item:nth-child(2n+2) {
  margin-left: 20rpx;
}

@media screen and (max-width: 370px) {
  .menu-item:nth-child(2n+2) {
    margin-left: 10rpx;
  }
}

.menu-item .image-wrapper {
  margin: 0 auto;
  height: 50rpx;
  position: absolute;
  top: calc(50% - 25rpx);
  left: 20%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.menu-item image {
  width: 40rpx;
  height: 40rpx;
}

.menu-item text {
  margin-left: 30rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

.btn-wrapper {
  width: 90%;
  margin-top: 30rpx;
  height: 100rpx;
  display: inline-flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.btn-logout:not([size='mini']) {
  padding: 0;
  margin: 0;
  width: 45%;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #4876FF;
  color: #fff;
  border-radius: 70rpx;
  font-size: 32rpx;
  font-weight: normal;
}

.btn-logout:nth-child(2) {
  margin-left: 20rpx;
}
