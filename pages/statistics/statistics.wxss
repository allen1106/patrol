.swiper-tab {
	width: 100%;
	border-bottom: 2rpx solid #777777;
	text-align: center;
  line-height: 80rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
	width: 50%;
	color: #777777;
}

.on {
  color: #4876FF;
  border-bottom: 5rpx solid #4876FF;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 98%;
  margin: 0 auto;
  overflow: hidden;
}

.swiper-box view {
	text-align: center;
}

.filter-menu {
  display: flex;
}

.date-filter {
  display: flex;
  width: 100%;
  height: 80rpx;
  background-color: #EAE7E8;
  align-items: center;
  justify-content: center;
}

.date-filter picker {
  width: 50%;
}

.picker text {
  display: inline-block;
  margin: 0 20rpx;
  width: calc(50% - 40rpx);
  text-align: center;
}

.picker text:nth-child(1) {
  width: calc(70% - 40rpx);
}

.picker text:nth-child(2) {
  width: calc(30% - 40rpx);
}

.user-filter {
  display: flex;
  width: calc(30% - 5rpx);
  height: 80rpx;
  margin-left: 5rpx;
  background-color: #EAE7E8;
  align-items: center;
  justify-content: center;
}

.user-filter image {
  width: 50rpx;
  height: 50rpx;
}

.item-detail {
  display: flex;
  width: 100%;
  height: 80rpx;
  margin-top: 10rpx;
  background-color: #EAE7E8;
}

.item-detail .img-wrapper {
  width: 10%;
  height: 100%;
  align-items: center;
  justify-content: center;
  align-content: center;
  text-align: center;
}

.item-detail .img-wrapper image {
  width: 38rpx;
  height: 70rpx;
}

.item-detail .info-wrapper {
  display: flex;
  flex-direction: row;
  width: 90%;
}

.item-detail .info-wrapper view {
  display: flex;
  flex: 1;
  text-align: left;
  align-items: center;
  justify-content: center;
  align-content: center;
}

