@import '../../components/cascaded-picker-view/cascaded-picker-view.wxss';

.cascaded-picker-view {
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 0;
  width: 100%;
  background-color: #EAE7E8;
}

.page-wrapper {
  width: 100%;
  margin: 20rpx auto;
  font-size: 20rpx;
}

.nav-wrapper {
  width: 95%;
  height: 80rpx;
  margin: 20rpx auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.nav {
  height: 100%;
  margin-left: 20rpx;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #486AF0;
  border-radius: 10rpx;
  color: #fff;
  font-size: 20rpx;
}

.nav.bg-down {
  background-color: #9059FF;
}

.nav:nth-child(1) {
  margin-left: 0;
}

.picker {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.picker text {
  font-size: 28rpx;
}

.picker image {
  width: 30rpx;
  height: 30rpx;
}

.item-detail {
  display: flex;
  width: 100%;
  height: 120rpx;
  margin-top: 3rpx;
  background-color: #DBDBF7;
}

.item-detail:nth-child(2n+1) {
  background-color: #EDECFC;
}

.item-detail .img-wrapper {
  width: 10%;
  height: 100%;
  align-items: center;
  justify-content: center;
  align-content: center;
  text-align: center;
}

.item-detail .img-wrapper image {
  width: 38rpx;
  height: 70rpx;
}

.item-detail .info-wrapper {
  display: flex;
  flex-direction: row;
  width: 90%;
  font-size: 24rpx;
}

.item-detail .info-wrapper view {
  display: flex;
  flex: 1;
  /* text-align: left; */
  align-items: center;
  justify-content: space-between;
  align-content: center;
  text-align: center;
}

.item-detail .info-wrapper view image {
  width: 25rpx;
  height: 25rpx;
}

.item-detail .info-wrapper view.text-center {
  justify-content: center;
}

.item-detail .info-wrapper view.flex-more {
  flex: 1.5;
}

.item-detail .info-wrapper view.flex-big {
  flex: 2;
}

